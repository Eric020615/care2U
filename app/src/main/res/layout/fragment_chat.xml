<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/FrameFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="426dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/blue"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ArrowLeft"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/arrow_sm_left" />

            <ImageView
                android:id="@+id/DotVertical"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginLeft="350dp"
                android:layout_marginTop="-45dp"
                android:src="@drawable/dots_vertical" />

            <ImageView
                android:id="@+id/DrProfileImage"
                android:layout_width="154dp"
                android:layout_height="80dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="-55dp"
                android:src="@drawable/dr_alvin" />

            <TextView
                android:id="@+id/DoctorName"
                android:layout_width="129dp"
                android:layout_height="50dp"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="-80dp"
                android:text="Dr.Alvin"
                android:textColor="@color/white"
                android:textSize="35dp" />

            <ImageView
                android:id="@+id/CricleOnline"
                android:layout_width="30dp"
                android:layout_height="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="170dp"
                android:src="@drawable/circle_icon" />

            <TextView
                android:id="@+id/OnlineOffline"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:text="online"
                android:layout_marginTop="-23dp"
                android:layout_marginLeft="200dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="630dp"
            android:layout_marginTop="100dp"
            android:background="#00B0CB"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/ChatBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="550dp"
                android:background="#00B0CB"

                android:src="@drawable/rectangle_blue_chat"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>