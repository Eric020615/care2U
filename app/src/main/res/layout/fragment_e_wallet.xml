<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/FrameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EWalletFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue">

        <LinearLayout
            android:layout_width="424dp"
            android:layout_height="236dp"
            android:orientation="vertical"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/BalanceText"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="60dp"
                android:src="@drawable/rectangle_small_lightblue" />

            <ImageView
                android:id="@+id/DebtText"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/rectangle_small_lightblue" />

            <TextView
                android:id="@+id/Balance"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="-160dp"
                android:text="Balance"
                android:textSize="25dp"
                android:textColor="@color/white"
                />

            <TextView
                android:id="@+id/Debt"
                android:layout_width="68dp"
                android:layout_height="45dp"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="60dp"
                android:text="Debt"
                android:textSize="25dp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/BalanceCount"
                android:layout_width="158dp"
                android:layout_height="45dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="-110dp"
                android:text="RM1000.00"
                android:textSize="25dp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/DebtCount"
                android:layout_width="132dp"
                android:layout_height="45dp"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="50dp"
                android:text="RM50.00"
                android:textSize="25dp"
                android:textColor="#DB0000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:layout_marginTop="241dp"
            android:background="@drawable/rectangle_light_blue"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp">

            <ImageButton
                android:id="@+id/TopUp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:background="#00B0CB"
                android:src="@drawable/top_up_icon"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/Pay"
                android:src="@drawable/pay_icon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="-100dp"
                android:background="#00B0CB"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/Transfer"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="290dp"
                android:layout_marginTop="-100dp"
                android:background="#00B0CB"
                android:src="@drawable/transfer_icon"
                tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="480dp"
            android:layout_marginTop="360dp"
            android:background="@drawable/rectangle_white"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/Transcation"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:text="Transcation History" />


            <TextView
                android:id="@+id/Seeall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="330dp"
                android:layout_marginTop="-25dp"
                android:text="See All"
                android:textColor="@color/blue"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/PaymentHistory"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:src="@drawable/payment_history"
                tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

            <ImageView
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@drawable/line_icon" />

            <ImageButton
                android:id="@+id/RefundHistory"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:src="@drawable/refund_history"
                tools:ignore="SpeakableTextPresentCheck" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>