<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F9F9F9"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/marketplace_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home_marketplace_button"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="#F9F9F9"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F9F9F9"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/meditation_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/home_meditation_icon"
                    android:backgroundTint="#F9F9F9"/>

                <ImageButton
                    android:id="@+id/timetable_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/home_timetable_icon"
                    android:backgroundTint="#F9F9F9"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/health_record_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#F9F9F9"
                    android:src="@drawable/home_health_record_icon" />

                <ImageButton
                    android:id="@+id/my_wallet_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/home_wallet_icon"
                    android:backgroundTint="#F9F9F9"/>

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                android:id="@+id/homepage_icons1TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AI FRIEND"
                android:layout_alignStart="@id/homepage_icons_1"
                android:textColor="#00336F"
                android:textSize="18sp"
                />

            <ImageView
                android:id="@+id/homepage_icons_1"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/homepage_icons1TV"
                android:src="@drawable/homepage_icons_1"/>

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</FrameLayout>