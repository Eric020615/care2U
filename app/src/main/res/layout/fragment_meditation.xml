<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#01639A"
    tools:context=".MeditationFragment">

    <!-- BackGround -->
    <ImageView
        android:id="@+id/lightblue_background"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_gravity="bottom"
        android:background="@drawable/rectangle_light_blue"
        />

    <ImageView
        android:id="@+id/white_background"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:layout_gravity="bottom"
        android:background="@drawable/rectangle_white"
        />

    <ImageView
        android:id="@+id/lightblue_background_with_radius"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_gravity="bottom"
        android:background="@drawable/rectangle_light_blue_with_radius"
        />

    <ImageView
        android:id="@+id/white_background_with_radius"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:layout_gravity="bottom"
        android:background="@drawable/rectangle_white_with_radius"
        />

    <!-- Meditation Part (Middle Part) -->
    <ImageView
        android:id="@+id/meditationIcon"
        android:layout_width="350dp"
        android:layout_height="325dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/meditation_logo_icon"
        />

    <Button
        android:id="@+id/Btn_expand"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="right"
        android:layout_marginTop="140dp"
        android:background="@drawable/expand_alt"
        />

    <!-- Music Blank Part -->
    <ImageView
        android:id="@+id/searchblank_reactangle"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@drawable/rectangle_white_with_radius"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        />

    <ImageView
        android:id="@+id/magnifierIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/magnifier_icon"
        />

    <EditText
        android:id="@+id/ET_searchField"
        android:layout_width="273dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:ems="12"
        android:hint="SEARCH MUSIC"
        android:inputType="textPersonName"
        android:textStyle="bold"
        />

    <!-- Timer Part -->
    <TextView
        android:id="@+id/Timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Timer"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="50dp"
        android:textAlignment="center"
        android:layout_gravity="bottom"
        android:layout_marginBottom="160dp"

        tools:ignore="RtlCompat"
        />

    <Button
        android:id="@+id/Btn_stop_timer"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:text="PRESS TO STOP"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="40dp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/rectangle_dark_blue_with_radius"
        android:layout_marginTop="650dp"
        />

    <TextView
        android:id="@+id/TV_show_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 0 : 0 0 : 0 0"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="40dp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="575dp"
        />

    <!-- Music View -->
    <ImageView
        android:id="@+id/IV_blue_field"
        android:layout_width="400dp"
        android:layout_height="55dp"
        android:background="@drawable/rectangle_normal_blue_with_radius"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="65dp"
        />

    <Button
        android:id="@+id/Btn_music_detail"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/music"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="75dp"
        />

    <TextView
        android:id="@+id/TV_music_name"
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:text="Unknown Music"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="75dp"
        android:textSize="12dp"
        />

    <TextView
        android:id="@+id/TV_music_artist_name"
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:text="Unknown Artist"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="90dp"
        android:textSize="12dp"
        />

    <Button
        android:id="@+id/Btn_previous"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/backward_step"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="75dp"
        />

    <Button
        android:id="@+id/Btn_play_music"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/circle_play"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="75dp"
        />

    <Button
        android:id="@+id/Btn_next"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/forward_step"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="75dp"
        />

    <Button
        android:id="@+id/Btn_music_list"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/list_music"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="75dp"
        />


</FrameLayout>